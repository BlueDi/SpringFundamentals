openapi: 3.0.0
info:
  version: 0.2.0
  title: Spring Fundamentals
servers:
  - url: 'http://localhost:3000'
paths:
  /user:
    get:
      summary: 'Returns details about a particular user'
      operationId: getUser
      tags:
        - user
      parameters:
        - name: firstName
          in: query
          description: first name of the user
          schema:
            type: string
      responses:
        '200':
          description: 'Details about a user by first name'
          headers:
            x-next:
              description: A link to the next page of responses
              schema:
                type: string
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/User'
        default:
          description: Unexpected error
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'
    post:
      summary: 'Adds a new user'
      operationId: addUser
      tags:
        - user
      parameters:
        - name: firstName
          in: query
          description: first name of the user
          schema:
            type: string
        - name: lastName
          in: query
          description: last name of the user
          schema:
            type: string
        - name: age
          in: query
          description: age of the user
          schema:
            type: integer
components:
  schemas:
    User:
      type: object
      required:
        - id
        - name
      properties:
        id:
          type: integer
          format: int64
        name:
          type: string
        tag:
          type: string
    Error:
      type: object
      required:
        - code
        - message
      properties:
        code:
          type: integer
          format: int32
        message:
          type: string